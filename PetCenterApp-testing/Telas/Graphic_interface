import tkinter

root = tkinter.Tk()
root.geometry("500x350")

def login():
    print("Test")

frame = tkinter.Frame(master=root)
frame.pack(pady=20, padx= 60, fill="both", expand=True)

label = tkinter.Label(master=frame, text="Login System")
label.pack(pady=5, padx=10)

entry1 = tkinter.Entry(master=frame)
entry1.pack(pady=20, padx=10)

entry2 = tkinter.Entry(master=frame, show="*")
entry2.pack(pady=12, padx=10)

button = tkinter.Button(master=frame, text="Login", command=login)
button.pack(pady=12, padx=10)

checkbox = tkinter.Checkbutton(master=frame, text="Remember me")
checkbox.pack(pady=12, padx=10)

root.mainloop()